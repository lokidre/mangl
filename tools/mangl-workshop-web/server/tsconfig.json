{
    "compilerOptions": {

      //"baseUrl": "src",
      "rootDir": "src",
      "outDir": "build",

      "target": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "allowJs": false,

      "preserveSymlinks": true,
      
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,

      "paths":{
        "/*": ["./src/*"],
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "doc", "**/*.spec.ts"],
    "typeRoots": ["src/types"],
    "files": [
      "src/index.ts",
      "src/types/global.d.ts"
    ],
    "references": [
      { "path": "../../../../tstoolkit"}
    ]    
}
